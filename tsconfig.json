{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "target": "esnext"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
